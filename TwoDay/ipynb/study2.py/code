# Quiz
# 1. 자신의 이름, 나이, 사는곳을 변수에 담아 출력해보기
name = '전지훈'
age = 25
address = '인천'
print('이름{} 나이{} 주소{}'.format(name,age,address))

# 2. 자신의 키 몸무게를 변수에 담아 출력하기
height = 171.8
weight = 77.4
print('키{:.1f} 몸무게{:.1f}'.format(height,weight))

# 3. ? + ? = 30 과 같은 결과가 나오도록 변수 설정
a = 10
b = 20
print("{} + {} = {}".format(a,b,a+b))

# 4. 이름과 출생년도 변수에 담아 만나이 출력하기
name = '전지훈'
birth = 2001
year = 2025
age = year-birth
print('이름:{}나이:{}'.format('최지환',age))

# 5. 실수를 변수에 담아 실수의 제곱 출력하기
num = 3.5
result = 3.5**2
print('num의 제곱{}'.format(result))

# 6. 정수 3개 변수에 담아 그 합과 평균을 서식문자로 출력
a = 3
b = 5
c = 6
sum = a+b+c
avg = sum/3
print('합:{}평균:{}'.format(sum,avg))

