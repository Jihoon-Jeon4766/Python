#이스케이프 문자

#1. \n"
print("다음라인으로")
print("이동")
print("다음라인으로\n이동")

#2. \t
print("Tab은   공백")
print("Tab은\t공백")

#3. \', \", \\
print("\',\",\\ 문자 사용하는 방법")

# end옵션

print("Welcome To")
print("IT NEWS")
print("Web Site")

print("Welcome To", end="")
print("IT NEWS", end= "")
print("Web Site")

print("Welcome To", end="")
print("IT NEWS", end= "")
print("Web Site")

print("Welcome To", end=" 0  ")
print("IT NEWS", end= "  ^   ")
print("Web Site")

#한 줄 주석

'''
여
러
줄
주
석
'''

print("\t\t\t#### 회비 정보 ####")
print("="*70)
print("이름 \t\t 나이 \t\t 전화번호 \t\t 회비")
print("김동완\t\t 38 \t\t 010-1111-1111 \t\t ₩20,000")
print("서지수\t\t 24 \t\t 010-1234-5678 \t\t ₩30,000")
print("이지은\t\t 25 \t\t 010-2525-2345 \t\t ₩50,000")
print("-"*70)
print("총합계\t\t\t\t\t\t\t ₩100,000")
print("="*70)


#서식 문자

#1. 단일 문자

#C 스타일
print("%c%c" %("안","녕"))

#python 스타일
print("{}{}".format("안","녕"))

#2. 문자열 및 정수 출력

#C 스타일
print("%s님의 나이는 %d 입니다." %("찬기",23))

#파이썬 스타일
print("{}님의 나이는 {} 입니다.".format("찬기","23"))

#3. 문자열 및 실수 출력

#C 스타일
print("%s님의 키는 %f 입니다." %("찬기",178.5))

# 파이썬 스타일
print("{}님의 키는{:f} 입니다.".format("찬기",178.5))
print("{}님의 키는{:.2f} 입니다.".format("찬기",178.5))

#4. 고정 길이 출력

#C 스타일
print("%d원\n%10d원"  %(100000, 2000000))

# 파이썬 스타일
print("{}원 \n{:25}원".format(10000,2000000))

#5. 정렬

#C 스타일
print("%10s" %("오른쪽 정렬"))
print("%-10s" %("왼쪽 정렬"))
print("%-10s,%10s" %("왼쪽정렬","오른쪽 정렬"))

# 파이썬 스타일
print("{:>10}".format("오른쪽 정렬"))  
print("{:<10}".format("왼쪽 정렬"))        
print("{:<10},{:>10}".format("왼쪽정렬", "오른쪽 정렬"))

#6. 빈 여백 0으로 채운 후 출력

#C 스타일
print("%5d %5d" %(1,1))

# 파이썬 스타일
print("{:5} {:5}".format(1,1))

#7. 추가 (파이썬만 가능)
print("{:>5},{:_>20,}".format(1,10000000000))
print("{:,}".format(10000000000))

# Quiz
print('\t\t\t파이썬 쇼핑몰')
print('번호 : 1078718855')
print('주소 : 서울시 종로구 종로3가')
print('성명 : 김사장')
print('전화 : 070-1234-5678')
print('-'*70)
print('\t\t품명','\t\t단가','\t\t수량','\t\t금액')
print('{:>20}{:>10}{:>13}{:>19}'.format('블루투스 이어폰','85,000',1,'85,000'))
print('{:>23}{:>14}{:>13}{:>19}'.format('USB3.0 8G','8,000',1,'8,000'))
print('-'*70)
print('{} {:>64}'.format("소 계",'93,000'))
print('-'*70)
print('{} {:>61}'.format("청구금액",'93,000'))
print('{} {:>61}'.format("받은금액",'100,000'))
print('{} {:>1}'.format("거스름돈",'7,000'))
print('-'*70)

# 변수
# a b c 변수 선언
# 할당 : 정수, 실수, 문자열 담기
# 참조 : 출력 print()
a = 10
b = 2.5
c = '문자열'
print(a,b,c)

# 타입 확인 > Type()
print(type(a))
print(type(b))
print(type(c))

# 키워드 확인
import keyword
print(keyword.kwlist)
